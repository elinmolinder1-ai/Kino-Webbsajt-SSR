  <!-- Page with one movie -->

<div class="movie-card movie-card--special">
  <h1 class="movie-card__title">{{ movie.title }}</h1>

  <div class="movie-card__intro"> {{{ movie.intro }}}</div>

  {{#if movie.image }}
  <img src="{{ movie.image.url }}" alt="Poster for {{ movie.image.url }} " class="movie-card__image">
  {{/if }}

  <a href="/movies" class="movie-card__link">Tillbaka till alla filmer</a>
</div>