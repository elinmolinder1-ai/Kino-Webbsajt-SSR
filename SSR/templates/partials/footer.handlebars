<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<footer>
  <section class="footer__container">
    <section class="footer__content">
      <div class="footer__section footer__section--about">
        <div class="footer__about"></div>
        <h3>Om oss</h3>
        <ul class="footer__links">
          {{#each footerAbout}}
          <li><a href="{{link}}">{{label}}</a></li>
          {{/each}}

        </ul>
      </div>

      <div class="footer__section footer__section--other">
        <div class="footer__other"></div>
        <h3>Övrigt</h3>
        <ul class="footer__terms">
          {{#each footerOther}}
          <li><a href="{{link}}">{{label}}</a></li>
          {{/each}}
        </ul>
      </div>

      <div class="footer__section footer__section--contact">
        <div class="footer__contact"></div>
        <h3>Hjälp & Kontakt</h3>
        <ul class="footer__terms">
          {{#each footerContact}}
          <li><a href="{{link}}">{{label}}</a></li>
          {{/each}}
        </ul>
      </div>

      <div class="footer__section footer__section--social">
        <div class="footer__social"></div>
        <h3>Sociala medier</h3>
        <div class="footer__icons">
          <div class="social">
            {{#each footerSocial}} <a href="{{link}}" aria-label="{{label}}"> <i class="fa-brands {{icon}}"></i> </a>
            {{/each}}
          </div>
        </div>
      </div>

      <div class="footer__section footer__section--extra">
        <div class="footer__extra">
          <div class="footer__row">
            <div class="newsletter">
              <h3 class="newsletter__title">{{footerNews.label}}</h3>

              <input class="newsletter__input" type="email" placeholder="    {{footerNews.placeholder}}">
              <button class="newsletter__submit" type="{{footerNews.buttonText}}">Anmäl dig</button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </section>
</footer>
